{
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./build/",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "./"
  },
  "lib": ["es2019", "dom"]
}
